<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foodie" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="SplashTheme" parent="Theme.Foodie">
        <item name="android:windowBackground">@drawable/splash_screen</item>
<!--        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/white</item>-->
<!--        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@android:color/white</item>-->
    </style>

    <style name="WhiteTextColor" parent="Theme.Foodie">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="BlackTextColor" parent="Theme.Foodie">
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="Theme.Foodie.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">@dimen/_13sdp</item>
        <item name="android:height">@dimen/_13sdp</item>
    </style>

</resources>