<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight">

    </style>

    <style name="AppTheme.Starting" parent="Theme.SplashScreen">
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
     drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/trecipe_icon</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <!-- Set a white background behind the splash screen icon. -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <!-- Set the splash screen background to white -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
    </style>


    <style name="MyRecipesErrorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Theme.Foodie.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:width">@dimen/_13sdp</item>
        <item name="android:height">@dimen/_13sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>
</resources>