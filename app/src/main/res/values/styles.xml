<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Trecipe" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/theme_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>

        <item name="colorSecondary">@color/grey_blue</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Trecipe.TransparentBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Trecipe.Starting" parent="Theme.SplashScreen">
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
     drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.Trecipe</item>
        <!-- Set a white background behind the splash screen icon. -->
        <item name="windowSplashScreenIconBackgroundColor">@color/theme_blue</item>
        <!-- Set the splash screen background to white -->
        <item name="windowSplashScreenBackground">@color/theme_blue</item>
    </style>

    <style name="Theme.Trecipe.BottomNav.Active" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@color/theme_blue</item>
        <item name="android:navigationBarColor">@color/theme_blue</item>
        <item name="selectableItemBackground">@color/theme_blue</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontFamily">@font/abeezee</item>
    </style>

    <style name="Theme.Trecipe.BottomNav.InActive" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@color/theme_blue</item>
        <item name="android:textColor">@color/bottom_nav_inactive</item>
        <item name="tint">@color/bottom_nav_inactive</item>
        <item name="android:navigationBarColor">@color/theme_blue</item>
        <item name="selectableItemBackground">@color/theme_blue</item>
        <item name="fontFamily">@font/abeezee</item>
    </style>
    
<!--    <style name="tab_selected_text" parent="TextAppearance.Design.Tab">-->
    <style name="tab_selected_text" parent="TextAppearance.Design.Tab">
<!--        <item name="fontFamily">@font/abeezee</item>-->
<!--        <item name="android:textSize">@dimen/_13ssp</item>-->
        <item name="android:textStyle">bold</item>
    </style>


    <style name="tab_text" parent="TextAppearance.Design.Tab">
<!--        <item name="fontFamily">@font/cabin</item>-->
<!--        <item name="android:textSize">@dimen/_13ssp</item>-->
    </style>


    <style name="MyRecipesErrorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize4Percent" parent="">
        <item name="cornerSize">4%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="header_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>