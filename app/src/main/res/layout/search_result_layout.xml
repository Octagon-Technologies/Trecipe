<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_15sdp"
    android:background="@android:color/white"
    android:theme="@style/BlackTextColor"
    android:paddingRight="@dimen/_8sdp"
    tools:ignore="RtlSymmetry">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/search_result_image"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/search_result_recipe_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/cabin_medium"
        tools:text="One-Pot Salmon &amp; Soba Dinner For Two"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="@+id/search_result_image"
        app:layout_constraintStart_toStartOf="@+id/search_result_image"
        app:layout_constraintTop_toBottomOf="@+id/search_result_image" />

    <TextView
        android:id="@+id/search_result_less_than_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawablePadding="@dimen/_3sdp"
        android:fontFamily="@font/cabin"
        android:text="Under 30 min"
        android:textColor="@color/dark_orange"
        android:textSize="@dimen/_12ssp"
        android:visibility="gone"
        app:drawableLeftCompat="@drawable/ic_clock"
        app:layout_constraintStart_toStartOf="@+id/search_result_recipe_name"
        app:layout_constraintTop_toBottomOf="@+id/search_result_recipe_name" />
</androidx.constraintlayout.widget.ConstraintLayout>