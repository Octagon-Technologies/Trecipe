<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@android:color/white"
    android:theme="@style/BlackTextColor">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mini_recipe_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/_110sdp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/mini_recipe_name"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:ellipsize="end"
        android:fontFamily="@font/advent_pro_medium"
        android:maxLines="2"
        tools:text="Homemade Broccoli Cheddar Soup"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintStart_toStartOf="@+id/mini_recipe_image"
        app:layout_constraintTop_toBottomOf="@+id/mini_recipe_image" />

    <ImageView
        android:id="@+id/remove_btn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mini_recipe_image"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/minus" />
</androidx.constraintlayout.widget.ConstraintLayout>