<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_12sdp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_blue"
        android:paddingBottom="@dimen/_8sdp"
        android:theme="@style/Theme.Trecipe.TransparentBackground">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mini_recipe_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/_110sdp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            tools:src="@drawable/sample_food" />

        <TextView
            android:id="@+id/mini_recipe_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:ellipsize="end"
            android:fontFamily="@font/advent_pro_medium"
            android:maxLines="2"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mini_recipe_rating"
            tools:text="Homemade Broccoli Cheddar Soup" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/mini_recipe_rating"
            style="@style/Widget.MaterialRatingBar.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:isIndicator="true"
            android:rating="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mini_recipe_image"
            app:mrb_progressTint="@color/dark_orange"
            app:mrb_secondaryProgressTint="@color/dark_orange" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_4sdp"
            android:paddingStart="@dimen/_6sdp"
            android:paddingEnd="@dimen/_6sdp"
            app:cardBackgroundColor="#730B3C4A"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/mini_recipe_image"
            app:layout_constraintStart_toStartOf="@+id/mini_recipe_image"
            app:strokeWidth="0dp">

            <TextView
                android:id="@+id/mini_recipe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/cabin_bold"
                android:padding="@dimen/_2sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@android:color/white"
                tools:text="1hr 20min" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/save_btn"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_margin="@dimen/_4sdp"
            app:contentPadding="@dimen/_4sdp"
            android:background="@color/transparent_black"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:srcCompat="@drawable/save_border"
            app:civ_circle_background_color="@color/transparent_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>