<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_discover">

    <fragment
        android:id="@+id/navigation_discover"
        android:name="com.octagon_technologies.trecipe.presentation.ui.discover.DiscoverFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_discover" >
        <action
            android:id="@+id/action_navigation_discover_to_recipeFragment"
            app:destination="@id/navigation_recipe_fragment" />
        <action
            android:id="@+id/action_navigation_discover_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_my_recipes"
        android:name="com.octagon_technologies.trecipe.presentation.ui.my_recipes.MyRecipesFragment"
        android:label="My Recipes"
        tools:layout="@layout/fragment_my_recipes" >
        <action
            android:id="@+id/action_navigation_my_recipes_to_recipeFragment"
            app:destination="@id/navigation_recipe_fragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_recipe_fragment"
        android:name="com.octagon_technologies.trecipe.presentation.ui.recipe.RecipeFragment"
        android:label="fragment_recipe"
        tools:layout="@layout/fragment_recipe" >
        <argument
            android:name="selectedRecipe"
            app:argType="com.octagon_technologies.trecipe.repo.network.models.selected_recipe.SelectedRecipe" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.octagon_technologies.trecipe.presentation.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchResultsFragment"
            app:destination="@id/searchResultsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchResultsFragment"
        android:name="com.octagon_technologies.trecipe.presentation.ui.search_results.SearchResultsFragment"
        android:label="fragment_search_results"
        tools:layout="@layout/fragment_search_results" >
        <action
            android:id="@+id/action_searchResultsFragment_to_navigation_recipe_fragment"
            app:destination="@id/navigation_recipe_fragment" />
        <argument
            android:name="recipeSuggestion"
            app:argType="com.octagon_technologies.trecipe.repo.network.models.suggestions.RecipeSuggestion" />
        <argument
            android:name="query"
            app:argType="string" />
    </fragment>

</navigation>